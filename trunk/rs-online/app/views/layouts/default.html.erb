<html>
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
  <title>RS-Online 2.0 - <%= controller.controller_name %></title>
  <link rel="icon" href="favicon.ico" type="image/x-icon" />
  <link rel="shortcut icon" href="favicon.ico" type="image/x-icon" />
  <%= stylesheet_link_tag "default", "rsonline-ui/jquery-ui-1.8.8.custom",
    "demo_page", "demo_table_jui", "tip-darkgray/tip-darkgray"
  %>
  <%= javascript_include_tag "jquery-1.4.4.min.js", "jquery-ui-1.8.8.custom.min.js",
    "jquery.dataTables", "jquery.poshytip.min", "default"
  %>
  <script src="/javascripts/firebug-lite.js" type="text/javascript"></script>
</head>
<body>

<div id="wrapper">

<div id="header" class="ui-widget ui-corner-all">
	<div id="logo">
		<h1><a href="#">RS-Online</a></h1>
		<p>version 2.0b ~ Powered by Ruby On Rails</p>
	</div>
	<!-- end #logo -->
	<div id="menu">
		<ul>
			<li class="active"><a href="index.rhtml">Home</a></li>
			<li><a href="#">About Us</a></li>
			<li><a href="#">Products</a></li>
			<li><a href="#">Services</a></li>
			<li><a href="#">Contact Us</a></li>
		</ul>
	</div>
	<!-- end #menu -->
</div>
<!-- end #header -->
<div id="page">
	<!--<div id="header-pic"></div>-->
	<div id="content">
     <p style="color: green"><%= flash[:notice] %></p>
     
      <div class="post">
        <%= yield %>
        
        <%#*<h1 class="title">Welcome to DownloadRS 1.0b </h1>%>
        <%#*<p class="byline"><small>Posted by Nightcrawler</small></p>%>
        <%#*<div class="entry">%>
          <%#*<p>%>
            <%#*DownloadRS is powered by eRuby.%>
          <%#*</p>%>
        <%#*</div>%>
        <%#*<div class="meta">%>
			<%#*<p class="links"></p>%>
        <%#*</div>%>
		</div>
	</div>
	<!-- end #content -->
   <div id="sidebar">
		<div id="sidebar-bgtop"></div>
		<div id="sidebar-content" class="ui-corner-all">
			<div id="sidebar-bgbtm" class="ui-corner-all">
			<ul>
				<li id="search">
					<h2 class="ui-corner-top">Search</h2>
               <%# TODO: fazer busca que funcione! %>
					<form method="get" action="">
						<fieldset>
                    <input type="text" id="s" name="s" value="" class="text ui-widget ui-corner-all" />
                    <input type="submit" id="def_search" value=""/>
						</fieldset>
					</form>
				</li>
				<li>
					<h2>Packages</h2>
					<ul>
                 <li class="packages_new">
                    <%= link_to "New Package", :controller => "packages",
                      :action => "new" %>
                  </li>
						<li class="packages_list"><%= link_to "List Package", :controller => "packages" %></li>
					</ul>
				</li>
				<li>
					<h2>History</h2>
					<ul>
                  <li class="histories_index"><%= link_to "Downloads Log", :controller => "histories" %></li>
					</ul>
				</li>
			</ul>
		</div>
		</div>
	</div>
	<!-- end #sidebar -->
	<div style="clear:both; margin:0;"></div>
</div>
<!-- end #page -->

</div>

<div id="footer">
  <p>&copy; 2010. All Rights Reserved. Design by <a href="http://twitter.com/atilacamurca">atilacamurca</a>. DownloadRS is powered by eRuby.</p>
</div>
<!-- end #footer -->
</body>
</html>