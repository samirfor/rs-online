<%# TODO: usar render para utilizar form em new e edit %>
<% form_for(@package) do |f| %>
  <%= f.error_messages %>
  <table width="95%" border="0" cellpadding="5">
    <tr>
      <td>
        <b><%= f.label :description %> (Optional): </b><br/>
        <%= f.text_field :description, :class => "text ui-widget-content ui-corner-all",
        :size => 40 %>
      </td>
      <td>
        <%# TODO: verificar param do select para por ordem na label e o nome do select. %>
        <b><%= f.label :priority %> </b><br/>
        <%#= select "level", "id", @priority %>
        <div id="priorities">
        <%  @priority.each do |p| %>
          <% if @package.priority != nil and p.id == @package.priority.id %>
            <%= radio_button_tag "package_priority", p.id, true %>
          <% else %>
            <%= radio_button_tag "package_priority", p.id %>
          <% end %>
          <%= f.label "priority_" + p.id.to_s, p.level %>
        <% end %>
        </div>
      </td>
    </tr>
    <tr>
      <td>
        <b><%= f.label :url_source %></b><br/>
        <%= f.text_field :url_source, :class => "text ui-widget ui-corner-all",
        :size => 50 %>
      </td>
      <td>
        <b><%= f.label :pass_phrase %></b><br/>
        <%= f.text_field :pass_phrase, :class => "text ui-widget ui-corner-all",
        :size => 40 %>
      </td>
    </tr>
    <tr>
      <td colspan="2">
        <b><%= f.label :s_links, "Links" %> </b><br/>
        <%= f.text_area :s_links, :cols => 100, :rows => 10, :class => "area-wide ui-corner-all" %>
      </td>
    </tr>
    <tr>
      <td valign="top">
          <b>Use IP instead Hostname?</b> (* this is a next version feature)<br/>
          <%= f.check_box :use_ip %><%= f.label :use_ip %>
        </td>
      <td>
        <b><%= f.label :comment %></b><br/>
        <%= f.text_area :comment, :cols => 40, :rows => 3, :class => "area-wide ui-corner-all" %>
      </td>
    </tr>
    <tr>
      <td align="right" colspan="2">
        <div  class="ui-widget-content ui-corner-all" style="padding: 10px 4px;">
          <span class="form-buttons">
            <button type="reset" id="bClear" class="">Clear</button>
            <button type="submit" id="bSubmit">Create</button>
            <%#= f.submit 'Create' %>
          </span>
        </div>
      </td>
    </tr>
  </table>
<% end %>
