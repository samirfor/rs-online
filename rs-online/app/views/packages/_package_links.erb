<div id="demo_jui"><!-- begin : demo_jui -->
  <table id="example" border="0" cellpadding="0" class="display">
    <thead>
      <tr>
        <th>Url</th>
        <th>Size</th>
        <th>Begin</th>
        <th>End</th>
        <th>Interval</th>
        <th>Completed?</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      <% @links.each do |link| %>
        <tr>
          <%# TODO: por apenas o filename e na chain.png o link real. %>
          <td><%= link_to image_tag("chain.png"), link.url %> <%= shorten link.url %></td>
          <td><%= h format_megabytes(link.size) %></td>
          <td><%= h format_timestamp(link.date_started) %></td>
          <td><%= h format_timestamp(link.date_finished) %></td>
          <td><%= h format_interval(link.date_started, link.date_finished) %></td>
          <td><%= h completed?(link.completed?) %></td>
          <td><%= image_tag(status_ico(link.status.status),
                :alt => link.status.status.capitalize(),
                :title => link.status.status.capitalize()) %>
            </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div><!-- end : demo_jui -->
<br/>