<%= javascript_include_tag "packages/show" %>
<%= stylesheet_link_tag "packages/show" %>

<%# show raw links : begin %>
<div id="dialog-raw-links" class="package-dialog" title="Raw Links">
  <fieldset>
    <label for="raw-links">Raw Links (just Ctrl + C)</label>
    <%= text_area_tag 'raw_links', to_raw_links(@links), :cols => 65, :rows => 6,
      :class => "area-wide ui-corner-all" %>
  </fieldset>
</div>
<%# show raw links : end %>

<div class="ui-widget-header ui-corner-all" style="padding: 0pt 10px;">
  <p class="package"><%= h @package.description %></p>
</div>
<br/>
<div id="package_links">
  <%= render :partial => 'package_links' %>
</div>

<div class="ui-widget-content ui-corner-all" style="padding: 0.4em;">
  <div><button id="toggler">Details</button></div>
  <div id="details" style="display: none;">
    <p>
      <b>Url Source:</b><br/>
      <%= h @package.url_source %><br/>
      <b>Pass Phrase</b><br/>
      <%= h @package.pass_phrase %><br/>
      <b>Comment:</b><br/>
      <%= h @package.comment %><br/>
    </p>
  </div>
</div>
<br/>
<%= link_to 'Edit Package', edit_package_path(@package) %> |
<%= link_to 'Back to List', packages_path %> |
<a href="#" id="append-link">Append Link</a> |
<a href="#" id="show-raw-links">Raw Links</a>


<%#*append link to package%>
<div id="dialog-form" class="package-dialog" title="Append Link to Package">
  <% form_tag url_for(:action => "append_link"), :id => "app-link", :remote => true do %>
    <fieldset>
      <label for="link">Link (url)</label>
      <%= text_field 'link', 'url', :size => 50, :class => "text ui-widget ui-corner-all" %>
      <%= hidden_field_tag 'package_id', @package.id %>
    </fieldset>
  <% end %>
</div>
